    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/spinner_border"
        android:orientation="horizontal"
        android:id="@+id/rlDropDown">

        <Spinner
            android:id="@+id/spinnerComplaintHistoryRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/spinner_stroke"/>

    </RelativeLayout>
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlDropDown"
        android:id="@+id/tbComplaints"
        android:visibility="visible"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:text="Sr. No."
                android:padding="3dip" />
            <TextView
                android:text="Complaint Name"
                android:padding="3dip" />
            <TextView
                android:text="Status"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="1"
                android:padding="3dip" />
            <TextView
                android:text="Network issue"
                android:padding="3dip" />
            <TextView
                android:text="Pending"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="2."
                android:padding="3dip" />
            <TextView
                android:text="Issue 2"
                android:padding="3dip" />
            <TextView
                android:text="Solved"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="3."
                android:padding="3dip" />
            <TextView
                android:text="Issue 3"
                android:padding="3dip" />
            <TextView
                android:text="Solved"
                android:padding="3dip" />
        </TableRow>
        <TableRow
            android:id="@+id/tr4"
            android:visibility="gone">
            <TextView
                android:text="4."
                android:padding="3dip" />
            <TextView
                android:text="Issue 4"
                android:padding="3dip" />
            <TextView
                android:text="Solved"
                android:padding="3dip" />
        </TableRow>
        <TableRow
            android:id="@+id/tr5"
            android:visibility="gone">
            <TextView
                android:text="5."
                android:padding="3dip" />
            <TextView
                android:text="Issue 5"
                android:padding="3dip" />
            <TextView
                android:text="Solved"
                android:padding="3dip" />
        </TableRow>
        <TableRow
            android:id="@+id/tr6"
            android:visibility="gone">
            <TextView
                android:text="6."
                android:padding="3dip" />
            <TextView
                android:text="Issue 6"
                android:padding="3dip" />
            <TextView
                android:text="Solved"
                android:padding="3dip" />
        </TableRow>
    </TableLayout>
</RelativeLayout>

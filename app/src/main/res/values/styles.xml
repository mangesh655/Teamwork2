<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/White</item>
        <item name="actionMenuTextColor">@color/White</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigationBarColor</item>
    </style>
    <!-- Sliding Tab layout(for login screen-->
    <style name="AppTheme.SlidingTabLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigationBarColor</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@color/White</item> <!--title color -->
        <item name="android:textColorSecondary">@color/White</item> <!-- subtitle color-->
        <item name="android:textColor">@color/Black</item> <!-- menu item text color -->
        <item name="colorControlNormal">@color/White</item> <!-- menu items color -->
    </style>

    <style name="MyTabStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="CustomSpinner" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
